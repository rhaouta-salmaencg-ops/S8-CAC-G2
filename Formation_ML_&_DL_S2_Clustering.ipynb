1️⃣ Importation des librairies
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

from sklearn.datasets import make_blobs
from sklearn.cluster import KMeans, DBSCAN, AgglomerativeClustering
from sklearn.mixture import GaussianMixture
from sklearn.metrics import silhouette_score
from sklearn.preprocessing import StandardScaler
Génération et visualisation des données
2️⃣ Génération des données
X, y = make_blobs(n_samples=300, centers=4, cluster_std=1.2, random_state=42)

# Visualisation initiale
plt.figure()
plt.scatter(X[:, 0], X[:, 1])
plt.title("Données générées")
plt.xlabel("Feature 1")
plt.ylabel("Feature 2")
plt.show()
3️⃣ Standardisation des données
scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)
4️⃣ K-Means
# Application de K-Means
kmeans = KMeans(n_clusters=4, random_state=42)
kmeans_labels = kmeans.fit_predict(X_scaled)

# Visualisation
plt.figure()
plt.scatter(X_scaled[:, 0], X_scaled[:, 1], c=kmeans_labels)
plt.scatter(kmeans.cluster_centers_[:, 0],
            kmeans.cluster_centers_[:, 1],
            marker='X',
            s=200)
plt.title("Clustering avec K-Means")
plt.show()

# Score de silhouette
print("Silhouette Score (K-Means):",
      silhouette_score(X_scaled, kmeans_labels))
5️⃣ DBSCAN
# Application de DBSCAN
dbscan = DBSCAN(eps=0.5, min_samples=5)
dbscan_labels = dbscan.fit_predict(X_scaled)

# Visualisation
plt.figure()
plt.scatter(X_scaled[:, 0], X_scaled[:, 1], c=dbscan_labels)
plt.title("Clustering avec DBSCAN")
plt.show()

# Score de silhouette (si plus d’un cluster détecté)
if len(set(dbscan_labels)) > 1:
    print("Silhouette Score (DBSCAN):",
          silhouette_score(X_scaled, dbscan_labels))
6️⃣ Clustering Hiérarchique (Agglomératif)
# Application du clustering hiérarchique
agglo = AgglomerativeClustering(n_clusters=4)
agglo_labels = agglo.fit_predict(X_scaled)

# Visualisation
plt.figure()
plt.scatter(X_scaled[:, 0], X_scaled[:, 1], c=agglo_labels)
plt.title("Clustering Hiérarchique")
plt.show()

# Score de silhouette
print("Silhouette Score (Agglomerative):",
      silhouette_score(X_scaled, agglo_labels))
7️⃣ Gaussian Mixture Model (GMM)
# Application du GMM
gmm = GaussianMixture(n_components=4, random_state=42)
gmm_labels = gmm.fit_predict(X_scaled)

# Visualisation
plt.figure()
plt.scatter(X_scaled[:, 0], X_scaled[:, 1], c=gmm_labels)
plt.title("Clustering avec GMM")
plt.show()

# Score de silhouette
print("Silhouette Score (GMM):",
      silhouette_score(X_scaled, gmm_labels))
 8️⃣ Méthode du Coude (Elbow Method)
inertia = []

for k in range(1, 11):
    model = KMeans(n_clusters=k, random_state=42)
    model.fit(X_scaled)
    inertia.append(model.inertia_)

plt.figure()
plt.plot(range(1, 11), inertia)
plt.title("Méthode du Coude")
plt.xlabel("Nombre de clusters")
plt.ylabel("Inertie")
plt.show()
 9️⃣ Comparaison des scores
print("K-Means Silhouette Score:",
      silhouette_score(X_scaled, kmeans_labels))

print("Agglomerative Silhouette Score:",
      silhouette_score(X_scaled, agglo_labels))

print("GMM Silhouette Score:",
      silhouette_score(X_scaled, gmm_labels))

if len(set(dbscan_labels)) > 1:
    print("DBSCAN Silhouette Score:",
          silhouette_score(X_scaled, dbscan_labels))
